<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - XboxGamePass</title>
    <!-- Agrega el enlace a la biblioteca de FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Albert+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <link href="~/Content/styleCarrito.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/paginacion.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/x-icon" href="@Url.Content("https://fvelasco.neocities.org/images/xbox.ico")">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header class="header bg-dark">
        <div class="container">
            <div class="cart-container">
                <div class="cart-icon">
                    <a id="miCarro">
                        <i class="bx bx-cart" id="logo-carro"></i>
                    </a>
                    <span id="cart-count">0</span>
                </div>
            </div>
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="@Url.Content("https://fvelasco.neocities.org/images/xbox.png")" alt="logo" class="logo">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link active" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Planes", "Planes", "Home", new { area = "" }, new { @class = "nav-link active" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Contacto", "Contacto", "Home", new { area = "" }, new { @class = "nav-link active" })
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Administración
                                </a>
                                <ul class="dropdown-menu text-center" aria-labelledby="navbarDropdown">
                                    <li>@Html.ActionLink("Análisis", "Analisis", "SP", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Clientes", "Index", "GUIClientes", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Pagos", "Index", "GUIPagos", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Planes", "Index", "GUIPlanes", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Suscripciones", "Index", "GUISuscripciones", new { area = "" }, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <style>
        /* Estilos personalizados */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            font-family: "Albert Sans", sans-serif;
            font-optical-sizing: auto;
            font-weight: 400;
            font-style: normal;
        }

        .container {
            flex: 1;
        }

        .header {
            top: 0;
            left: 0;
            width: 100%;
            padding: 1rem 12%; /* Reducir el padding vertical */
            backdrop-filter: blur(50px);
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 100;
        }


        /* Estilos para los iconos del menú */
        .icons {
            font-size: 2.8rem;
            color: #fff;
            cursor: pointer;
            display: none;
        }

        .logo {
            width: 100px; /* Ancho del logo */
            height: auto; /* Altura automática para mantener la proporción */
            position: relative; /* Cambiado a relativo para mantener el flujo del documento */
            top: 0; /* Ajustar la posición superior */
            left: 0; /* Ajustar la posición izquierda */
        }


        /* Estilos para el contenedor del carrito */
        .cart-container {
            position: absolute;
            top: 0;
            right: 0;
            padding: 10px;
            border-radius: 5px;
            margin-right: 70px;
            margin-top: 27px;
        }

        /* Estilos para el ícono de carrito */
        .cart-icon .bx-cart {
            font-size: 35px;
            color: #f0f0f0
        }

        /* Estilos para el número de elementos en el carrito */
        #cart-count {
            position: fixed;
            background-color: #0067b8;
            color: white;
            border-radius: 50%;
            padding: 1px 7.5px;
            font-size: 14px;
            margin-left: -11px;
            margin-top: -7px;
        }

        #logo-carro {
            cursor: pointer;
        }
        .pagination-container {
            text-align: center;
            margin: 20px 0;
        }

        .pagination {
            display: inline-block;
        }

            .pagination li {
                display: inline-block;
                margin-right: 5px;
            }

                .pagination li a {
                    color: black;
                    float: left;
                    padding: 8px 16px;
                    text-decoration: none;
                    transition: background-color .3s;
                    border: 1px solid #ddd;
                    font-size: 13px;
                }

                .pagination li.active a { /* Aquí ajustamos el selector */
                    background-color: #4CAF50;
                    color: white;
                    border: 1px solid #4CAF50;
                }

                .pagination li a:hover:not(.active) {
                    background-color: #ddd;
                }

                .pagination li.disabled {
                    display: inline-block;
                    margin-right: 5px;
                    padding: 8px 16px;
                    color: #999;
                    font-size: 13px;
                }
    </style>

    <div class="container my-5">
        @RenderBody()
    </div>

    <footer class="bg-dark text-center text-white">
        <div class="container p-4">
            <!-- Sección de íconos de redes sociales -->
            <section class="mb-4">
                <!-- Facebook -->
                <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                    <i class="fab fa-facebook-f"></i>
                </a>

                <!-- Twitter -->
                <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                    <i class="fab fa-twitter"></i>
                </a>

                <!-- Google -->
                <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                    <i class="fab fa-google"></i>
                </a>

                <!-- Instagram -->
                <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                    <i class="fab fa-instagram"></i>
                </a>

                <!-- Linkedin -->
                <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                    <i class="fab fa-linkedin-in"></i>
                </a>

                <!-- Github -->
                <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                    <i class="fab fa-github"></i>
                </a>
            </section>
            <!-- Fin de la sección de íconos de redes sociales -->
        </div>
        <!-- Fin del contenedor -->
        <!-- Texto de derechos de autor -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2024 Copyright:
            <a class="text-white" href="https://www.xbox.com/es-ES/">Xbox.com</a>
        </div>
        <!-- Fin del texto de derechos de autor -->
    </footer>


    <!-- Incluir JS de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("https://fvelasco.neocities.org/js/actualizarcarrito.js")" type="text/javascript"></script>
    <script src="@Url.Content("https://fvelasco.neocities.org/js/carrito.js")" type="text/javascript"></script>
    <script src="@Url.Content("https://fvelasco.neocities.org/js/mostrarcarrito.js")" type="text/javascript"></script>
    <script src="@Url.Content("https://fvelasco.neocities.org/js/java.js")" type="text/javascript"></script>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>
