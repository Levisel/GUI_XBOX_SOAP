@using PagedList;
@using PagedList.Mvc;
@model IPagedList<XboxGamepassMVC.Models.ModelCliente>

@{
    ViewBag.Title = "Index";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Añadir nuevo", "Create", null, new { @class = "btn btn-success" })
</p>

<form action="@Url.Action("Index", "GUIClientes")" method="get">
    <div class="row align-items-center">
        <div class="col-md-2">
            <div class="form-group mb-2">
                <label for="searchID" class="col-form-label">Cédula:</label>
                <input type="text" class="form-control" name="searchID" />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group mb-2">
                <label for="searchNombre" class="col-form-label">Nombre:</label>
                <input type="text" class="form-control" name="searchNombre" />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group mb-2">
                <label for="searchApellido" class="col-form-label">Apellido:</label>
                <input type="text" class="form-control" name="searchApellido" />
            </div>
        </div>
        <div class="col-md-1" style="margin-bottom: -30px;">
            <div class="form-group mb-lg-1">
                <input type="submit" class="btn btn-dark" value="Buscar" />
            </div>
        </div>
    </div>
</form>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Cli_Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Cli_Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Cli_Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Cli_BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Cli_Pais)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Cli_Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cli_Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cli_Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cli_Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cli_BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cli_Pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cli_Email)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Cli_Cedula }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Detalles", "Details", new { id = item.Cli_Cedula }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Cli_Cedula }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>

<div class="pagination-container">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
            {
                DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                DisplayLinkToLastPage = PagedListDisplayMode.Always,
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                DisplayLinkToIndividualPages = true,
                DisplayPageCountAndCurrentLocation = false,
                MaximumPageNumbersToDisplay = 5,
                DisplayEllipsesWhenNotShowingAllPageNumbers = true,
                EllipsesFormat = "…",
                LinkToFirstPageFormat = "Primera",
                LinkToPreviousPageFormat = "Anterior",
                LinkToNextPageFormat = "Siguiente",
                LinkToLastPageFormat = "Última",
                PageCountAndCurrentLocationFormat = "Página {0} de {1}.",
                ItemSliceAndTotalFormat = "Mostrando {0} a {1} de {2} entradas.",
                FunctionToDisplayEachPageNumber = null,
                ClassToApplyToFirstListItemInPager = null,
                ClassToApplyToLastListItemInPager = null,
                ContainerDivClasses = new[] { "pagination" }, // Cambiado a "pagination"
                UlElementClasses = new[] { "pagination" }, // Cambiado a "pagination"
                LiElementClasses = new[] { "page-item" },
            })
        </ul>
    </nav>
</div>