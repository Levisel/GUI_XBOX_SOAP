@using PagedList;
@using PagedList.Mvc;
@model XboxGamepassMVC.Models.ModelSPUnited
@{
    ViewBag.Title = "Analisis";
}
<style>
    .table-container {
        max-width: 800px;
        margin: 0 auto;
        margin-top: 50px;
    }

    h2 {
        margin-top: 20px;
    }
</style>

<body>
    <div class="container">
        <div class="table-container">
            <!-- Tabla 1: Clientes con suscripción activa e inactiva -->
            <h2>Clientes con suscripción activa e inactiva</h2>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Clientes con suscripción activa</th>
                    <th>Clientes sin suscripción activa</th>
                </tr>
                @foreach (var item in Model.ClientesSuscripcionActivaInactiva)
                {
                    <tr>
                        <td>@item.ClientesConSuscripcionActiva</td>
                        <td>@item.ClientesSinSuscripcionActiva</td>
                    </tr>
                }
            </table>
            <div class="pagination-container">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @Html.PagedListPager(Model.ClientesSuscripcionActivaInactiva, page => Url.Action("Analisis", new { page }), new PagedListRenderOptions
                        {
                            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                            DisplayLinkToLastPage = PagedListDisplayMode.Always,
                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            DisplayLinkToNextPage = PagedListDisplayMode.Always,
                            DisplayLinkToIndividualPages = true,
                            DisplayPageCountAndCurrentLocation = false,
                            MaximumPageNumbersToDisplay = 5,
                            DisplayEllipsesWhenNotShowingAllPageNumbers = true,
                            EllipsesFormat = "…",
                            LinkToFirstPageFormat = "Primera",
                            LinkToPreviousPageFormat = "Anterior",
                            LinkToNextPageFormat = "Siguiente",
                            LinkToLastPageFormat = "Última",
                            PageCountAndCurrentLocationFormat = "Página {0} de {1}.",
                            ItemSliceAndTotalFormat = "Mostrando {0} a {1} de {2} entradas.",
                            FunctionToDisplayEachPageNumber = null,
                            ClassToApplyToFirstListItemInPager = null,
                            ClassToApplyToLastListItemInPager = null,
                            ContainerDivClasses = new[] { "pagination" }, // Cambiado a "pagination"
                            UlElementClasses = new[] { "pagination" }, // Cambiado a "pagination"
                            LiElementClasses = new[] { "page-item" },
                        })
                    </ul>
                </nav>
            </div>

            <!-- Tabla 2: Clientes por país y plan -->
            <h2>Clientes por país y plan</h2>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>País</th>
                    <th>Número de clientes</th>
                    <th>Nombre del plan</th>
                    <th>Duración del plan</th>
                </tr>
                @foreach (var item in Model.ClientesPorPaisYPlan)
                {
                    <tr>
                        <td>@item.Pais</td>
                        <td>@item.NumeroClientes</td>
                        <td>@item.NombrePlan</td>
